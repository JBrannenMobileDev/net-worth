<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nationalmerchantsassociation.mynetworth.view_layer.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/net_worth"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="293dp"
        android:orientation="horizontal"
        android:paddingLeft="67dp"
        android:paddingRight="67dp">

        <TextView
            android:id="@+id/assets_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/circle_net_worth"
            android:gravity="center"
            android:text="Assets"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/debt_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/circle_net_worth"
            android:gravity="center"
            android:text="Debt"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/net_worth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_net_worth"
        android:padding="10dp"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/empty_state_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:tint="@color/colorPrimaryDark"
        android:visibility="gone"
        app:srcCompat="@mipmap/ic_insert_chart_white_48dp" />

    <TextView
        android:id="@+id/empty_state_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:text="No assets or debts recorded. "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/dashboard_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="105dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

    </com.github.mikephil.charting.charts.BarChart>

</FrameLayout>
